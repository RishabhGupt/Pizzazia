<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="rishabhgupta.appdemo.pizzazia">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="Pizzaziaa"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".PurchasingDetails"></activity>
        <activity
            android:name=".Payment"
            android:label="Payment"
            android:parentActivityName=".Pizzazia">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="rishabhgupta.appdemo.pizzazia.Pizzazia" />
        </activity>
        <activity android:name=".Pizzazia" />
        <activity
            android:name=".Signup"
            android:label="Signup"
            android:parentActivityName=".LoginActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="rishabhgupta.appdemo.pizzazia.LoginActivity" />
        </activity>
        <activity
            android:name=".LoginActivity"
            android:label="Login" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>